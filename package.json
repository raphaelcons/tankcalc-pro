    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.tankcalc.pro",
    "productName": "TankCalc Pro",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "RelatorioPdfMake.js",
      "package.json",
      "preload.js",
      "assets/**",
      "fonts/**/*",
      "src/**/*"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/images/logo.png"
    }
